<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark"><br/>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>video</th>
        <th>Image</th>
        <th> </th>
      </tr>
    </thead>

    <tbody>
      <% @exercises.each do |exercises| %>
        <tr>
          <td>
      <%= link_to exercises.name, exercises %>


          </td>
          
          <td><%= exercises.description %></td>
          <td><video controls width="480" height="288" >
            <source src="<%= exercises.video_url.to_s %>" />
          </video></td>
          <br/>
          <td><%= image_tag(exercises.image_url.to_s) %></td>

          <td><%= link_to 'Show', exercises, class:"btn btn-info btn-sm" %></td>
          <% if current_user.admin? %>
          <td><%= link_to 'Delete', exercises, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
          <% end %>          
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <% if current_user.admin? %>
   <%= link_to "New Exercise", new_exercise_path, class:"btn btn-secondary" %>
  <% end %>  
